{
	"name": "YTubeTimestamps",
	"version": "1.0.0",
	"description": "Quickly save, view, and jump to custom timestamps on YouTube videos.",
	"permissions": [
		"storage",
		"tabs"
	],
	"host_permissions": [
		"https://*.youtube.com/*"
	],
	"background": {
		"service_worker": "background.js"
	},
	"content_scripts": [
		{
			"matches": [
				"https://*.youtube.com/*"
			],
			"js": [
				"contentScript.js"
			]
		}
	],
	"web_accessible_resources": [
		{
			"resources": [
				"assets/bookmark.png",
				"assets/bookmark_filled.png",
				"assets/play.png",
				"assets/delete.png",
				"pageBridge.js"
			],
			"matches": [
				"https://*.youtube.com/*"
			]
		}
	],
	"action": {
		"default_icon": {
			"16": "assets/ext-icon.png",
			"24": "assets/ext-icon.png",
			"32": "assets/ext-icon.png"
		},
		"default_title": "YTubeTimestamps",
		"default_popup": "popup.html"
	},
	"icons": {
		"128": "assets/ext-icon.png"
	},
	"manifest_version": 3
}